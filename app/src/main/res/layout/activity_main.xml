<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_30"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ro.zero.zeronotes.NavButton
            android:id="@+id/navButton_Notes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_20"
            android:padding="2.5dp"
            app:navIcon="@android:drawable/ic_menu_add"
            app:navIconOverscale="true"
            app:navIconSize="35dp"
            app:navText="Notes"
            app:navTextColor="@color/white"
            app:navTextSize="12sp"
            app:selectedColor="@color/grey_25" />

        <ro.zero.zeronotes.NavButton
            android:id="@+id/navButton_Habits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_20"
            android:padding="2.5dp"
            app:navIcon="@android:drawable/ic_menu_add"
            app:navIconOverscale="true"
            app:navIconSize="35dp"
            app:navText="Habits"
            app:navTextColor="@color/white"
            app:navTextSize="12sp"
            app:selectedColor="@color/grey_25" />

        <ro.zero.zeronotes.NavButton
            android:id="@+id/navButton_Calendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_20"
            android:padding="2.5dp"
            app:navIcon="@android:drawable/ic_menu_add"
            app:navIconOverscale="true"
            app:navIconSize="35dp"
            app:navText="Calendar"
            app:navTextColor="@color/white"
            app:navTextSize="12sp"
            app:selectedColor="@color/grey_25" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>