<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF000000"
    android:paddingHorizontal="8dp">

    <TextView
        android:id="@+id/popup_note_options_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cancel"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:textSize="20sp"
        android:background="@drawable/popup_note_options_button_gradient"
        />
    <TextView
        android:id="@+id/popup_note_options_remove"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/popup_note_options_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Remove"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:textSize="20sp"
        android:background="@drawable/popup_note_options_button_gradient"
        />
    <TextView
        android:id="@+id/popup_note_options_add_subtask"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/popup_note_options_remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Add Sub-Task"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:textSize="20sp"
        android:background="@drawable/popup_note_options_button_gradient"
        />
    <TextView
        android:id="@+id/popup_note_options_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/popup_note_options_add_subtask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Edit"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:textSize="20sp"
        android:background="@drawable/popup_note_options_button_gradient"
        />

</androidx.constraintlayout.widget.ConstraintLayout>